---
import '../styles/theme.css';
import '../styles/global.css';
import type { MarkdownHeading } from 'astro';
import Container from '../components/Container.astro';
import Header from '../components/Header.astro';
import SkipToContent from '../components/SkipToContent.astro';
import { Sprite } from 'astro-icon';
import TableOfContents from '../components/TableOfContents.astro';
import MainNavigation from '../components/MainNavigation.astro';

export interface Props {
  title: string;
  headings: MarkdownHeading[];
}

const { title, headings } = Astro.props;
---

<script>
  const tocMobile = document.getElementById('toc-mobile')!;

  tocMobile.querySelectorAll<HTMLAnchorElement>('a[href]').forEach(el => {
    el.addEventListener('click', () => {
      tocMobile.removeAttribute('open');
    });
  });
</script>

<html lang="en" class="preload">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      const LOCAL_STORAGE_KEY = 'dark-mode';
      const html = document.documentElement;

      const isDarkMode = JSON.parse(localStorage.getItem(LOCAL_STORAGE_KEY));
      if (isDarkMode) {
        html.classList.add('dark');
      }
    </script>
  </head>
  <body>
    <Sprite.Provider>
      <SkipToContent />
      <Container>
        <div class="layout">
          <Header>
            <details id="toc-mobile">
              <summary>On this page</summary>
              <TableOfContents headings={headings} class="toc-mobile-content" />
            </details>
          </Header>

          <aside>
            <MainNavigation />
          </aside>

          <main id="content">
            <slot />
          </main>

          <aside>
            <TableOfContents headings={headings} />
          </aside>

          <footer>
            Made with ðŸ’€ by
            <a
              href="https://github.com/loicpennequin"
              rel="noopener noreferrer"
              target="_blank"
            >
              Daria aka "CEO of Based"
            </a>
          </footer>
        </div>
      </Container>
    </Sprite.Provider>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        setTimeout(() => {
          document.documentElement.classList.remove('preload');
        }, 1000);
      });
    </script>
  </body>
</html>
<style is:global>
  @import 'open-props/media';
  @import 'open-props/postcss/normalize';
  .layout {
    min-height: 100vh;
    display: grid;
    grid-template-rows: auto 1fr auto;
    grid-template-columns: 30ch 1fr 30ch;

    @media (--lg-n-below) {
      display: block;
    }
  }

  #toc-mobile {
    background: transparent;

    & > summary {
      width: fit-content;
    }
    @media (--lg-n-above) {
      display: none;
    }
  }

  .toc-mobile-content {
    box-shadow: var(--shadow-2);
    width: fit-content;
  }

  .layout > header,
  .layout > footer {
    grid-column: 1 / -1;
  }
  .layout > footer {
    padding: var(--size-4);
    text-align: center;
  }

  .layout > aside {
    align-self: start;
    position: sticky;
    top: 5rem;
    z-index: 2;
  }

  @media (--lg-n-below) {
    aside {
      display: none;
    }
  }

  main {
    justify-self: center;
    with: 100%;
    max-width: 60ch;

    @media (--md-n-below) {
      padding-top: var(--size-5);
    }

    & h2 {
      margin-block-end: var(--size-4);
    }

    & :is(h2, h3, h4) {
      scroll-margin-block-start: 6.5rem;

      @media (--md-n-above) {
        scroll-margin-block-start: 5rem;
      }
    }
  }
</style>
