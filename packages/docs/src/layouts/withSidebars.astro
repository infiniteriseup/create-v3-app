---
import '../styles/theme.css';
import '../styles/global.css';
import type { MarkdownHeading } from 'astro';
import Container from '../components/Container.astro';
import Header from '../components/Header.astro';
import SkipToContent from '../components/SkipToContent.astro';
import { Sprite } from 'astro-icon';
import TableOfContents from '../components/TableOfContents.astro';
import LeftNavigation from '../components/LeftNavigation.astro';

export interface Props {
  title: string;
  headings: MarkdownHeading[];
}

const { title, headings } = Astro.props;
const currentPage = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Sprite.Provider>
      <SkipToContent />
      <Container class="layout">
        <Header />

        <aside>
          <LeftNavigation />
        </aside>

        <main id="content">
          <slot />
        </main>
        <aside>
          <TableOfContents headings={headings} />
        </aside>

        <footer>
          Made with ðŸ’€ by
          <a
            href="https://github.com/loicpennequin"
            rel="noopener noreferrer"
            target="_blank"
          >
            Daria aka "CEO of Based"
          </a>
        </footer>
      </Container>
    </Sprite.Provider>
  </body>
</html>
<style is:global>
  @import 'open-props/postcss/normalize';
  .layout {
    min-height: 100vh;
    display: grid;
    grid-template-rows: auto 1fr auto;
    grid-template-columns: 25ch 1fr 25ch;
  }

  .layout > header,
  .layout > footer {
    grid-column: 1 / -1;
  }
  .layout > footer {
    padding: var(--size-4);
    text-align: center;
  }

  .layout > aside {
    align-self: start;
    position: sticky;
    top: 5rem;
    z-index: 2;
  }
</style>
