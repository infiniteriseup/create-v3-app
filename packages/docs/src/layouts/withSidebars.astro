---
import '../styles/theme.css';
import '../styles/global.css';
import type { MarkdownHeading } from 'astro';
import Container from '../components/Container.astro';
import Header from '../components/Header.astro';
import SkipToContent from '../components/SkipToContent.astro';
import { Sprite } from 'astro-icon';

export interface Props {
  title: string;
  headings: MarkdownHeading[];
}

const { title, headings } = Astro.props;
console.log(headings);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Sprite.Provider>
      <SkipToContent />
      <Container class="layout">
        <Header />

        <aside>Navigation</aside>

        <main id="content">
          <slot />
        </main>
        <aside class="toc">
          <h2>Table of Contents</h2>
          <ul>
            {
              headings.map(heading => (
                <li>
                  <a href={`#${heading.slug}`}>{heading.text}</a>
                </li>
              ))
            }
          </ul>
        </aside>

        <footer>
          Made with ðŸ’€ by
          <a
            href="https://github.com/loicpennequin"
            rel="noopener noreferrer"
            target="_blank"
          >
            Daria aka "CEO of Based"
          </a>
        </footer>
      </Container>
    </Sprite.Provider>
  </body>
</html>
<style is:global>
  @import 'open-props/postcss/normalize';
  .layout {
    min-height: 100vh;
    display: grid;
    grid-template-rows: auto 1fr auto;
    grid-template-columns: 25ch 1fr 25ch;
  }

  .layout > header,
  .layout > footer {
    grid-column: 1 / -1;
  }
  .layout > footer {
    padding: var(--size-4);
    text-align: center;
  }

  .toc {
    align-self: start;
    position: sticky;
    top: 4.5%;
    z-index: 2;

    & > h2 {
      font-size: var(--font-size-3);
      font-weight: var(--font-weight-5);
      margin-block-end: var(--size-2);
    }

    & ul,
    a {
      padding: 0;
    }

    & a,
    a:visited {
      color: inherit;
    }

    & a:hover,
    a:focus-visible {
      text-decoration: underline;
    }
    & ul {
      list-style: none;
    }
  }
</style>
