---
import '../styles/theme.css';
import '../styles/global.css';
import type { MarkdownHeading } from 'astro';
import Container from '../components/Container.astro';
import Header from '../components/Header.astro';
import SkipToContent from '../components/SkipToContent.astro';
import { Sprite } from 'astro-icon';
import TableOfContents from '../components/TableOfContents.astro';
import MainNavigation from '../components/MainNavigation.astro';
import Head from '../components/Head.astro';
import HeadSEO from '../components/HeadSEO.astro';

export interface Props {
  frontmatter: { title: string; description: string };
  headings: MarkdownHeading[];
}

const { frontmatter, headings } = Astro.props;
---

<script>
  const tocMobile = document.getElementById(
    'toc-mobile'
  )! as HTMLDetailsElement;

  tocMobile.querySelectorAll<HTMLAnchorElement>('a[href]').forEach(el => {
    el.addEventListener('click', () => {
      tocMobile.removeAttribute('open');
    });
  });

  document.addEventListener('click', e => {
    if (!tocMobile.open) return;
    const target = e.target as HTMLElement;

    if (target !== tocMobile && !tocMobile.contains(target)) {
      tocMobile.open = false;
    }
  });
</script>

<html lang="en">
  <head>
    <Head />
    <HeadSEO frontmatter={frontmatter} />
    <title>{frontmatter.title} | Create V3 App</title>
  </head>
  <body>
    <Sprite.Provider>
      <SkipToContent />
      <Container>
        <div class="layout">
          <Header>
            <details id="toc-mobile">
              <summary>On this page</summary>
              <TableOfContents headings={headings} class="toc-mobile-content" />
            </details>
          </Header>

          <aside>
            <MainNavigation />
          </aside>

          <main id="content">
            <slot />
          </main>

          <aside>
            <TableOfContents headings={headings} />
          </aside>

          <footer>
            Made with ðŸ’€ by
            <a
              href="https://github.com/loicpennequin"
              rel="noopener noreferrer"
              target="_blank"
            >
              Daria aka "CEO of Based"
            </a>
          </footer>
        </div>
      </Container>
    </Sprite.Provider>
    <style is:global>
      @import '../styles/media';

      :root {
        --header-height: 5rem;

        @media (--md-n-below) {
          --header-height: 6.5rem;
        }
      }

      .layout {
        min-height: 100vh;
        display: grid;
        grid-template-rows: auto 1fr auto;
        grid-template-columns: 30ch 1fr 30ch;
        column-gap: var(--size-2);

        @media (--lg-n-below) {
          grid-template-columns: 30ch 1fr;
        }
        @media (--md-n-below) {
          grid-template-columns: 1fr;
        }
      }

      #toc-mobile {
        background: transparent;

        & > summary {
          width: fit-content;
        }
        @media (--lg-n-above) {
          display: none;
        }
      }

      .toc-mobile-content {
        box-shadow: var(--shadow-2);
        max-height: clamp(50vh, 40rem, calc(100vh - var(--header-height)));
        overflow-y: auto;
        overflow-x: hidden;
        width: 100%;
        box-shadow: var(--shadow-3);
      }

      .layout > header,
      .layout > footer {
        grid-column: 1 / -1;
      }
      .layout > footer {
        padding: var(--size-4);
        text-align: center;
        margin-block-start: auto;
      }

      .layout > aside {
        align-self: start;
        position: sticky;
        top: 5rem;
        z-index: 2;

        &:nth-of-type(1) {
          @media (--md-n-below) {
            display: none;
            float: left;
          }
        }
        &:nth-of-type(2) {
          height: calc(100vh - var(--header-height));
          overflow-y: auto;
          overflow-x: hidden;
          scrollbar-color: var(--gray-8) transparent;
          scrollbar-width: thin;

          &::-webkit-scrollbar-thumb {
            background-color: var(--gray-8);
          }
          &::-webkit-scrollbar-track {
            background-color: transparent;
          }

          &::-webkit-scrollbar {
            width: 8px;
            height: 8px;
          }
        }

        @media (--md-n-below) {
          display: none;
        }
      }

      main {
        justify-self: center;
        width: 100%;
        max-width: 80ch;

        @media (--md-n-below) {
          padding-block-start: var(--size-5);
        }

        & h2 {
          margin-block: var(--size-8) var(--size-5);

          &:first-of-type {
            margin-top: 0;
          }
        }

        & h3 {
          font-weight: var(--font-weight-6);
          margin-block: var(--size-6) var(--size-4);
        }

        & h4 {
          font-weight: var(--font-weight-5);
          margin-block: var(--size-4) var(--size-3);
        }

        & h5 {
          font-weight: var(--font-weight-4);
        }

        & p {
          margin-block: var(--size-5);
        }

        & :is(p, h2, h3, h4) {
          max-inline-size: var(--size-content-4);
        }
        & :is(h2, h3, h4) {
          scroll-margin-block-start: var(--header-height);
        }

        & pre {
          border: solid 1px var(--green-5);
        }

        & .astro-code {
          padding: var(--size-2) var(--size-5);
          border-radius: var(--radius-2);
        }

        & .remark-code-title {
          background-color: #282a36;
          padding: var(--size-2) var(--size-5);
          color: #f8f8f2;
          border-top-left-radius: var(--radius-2);
          border-top-right-radius: var(--radius-2);
          border: solid 1px var(--green-5);
          border-bottom-color: transparent;

          & + .astro-code {
            border-top-left-radius: 0;
            border-top-right-radius: 0;
            display: block;
            max-inline-size: 100%;
          }
        }

        & .image--small {
          width: 12em;
          margin-inline: auto;
        }
      }
    </style>
  </body>
</html>
