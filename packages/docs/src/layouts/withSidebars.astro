---
import '../styles/theme.css';
import '../styles/global.css';
import type { MarkdownHeading } from 'astro';
import Container from '../components/Container.astro';
import Header from '../components/Header.astro';
import SkipToContent from '../components/SkipToContent.astro';
import { Sprite } from 'astro-icon';
import TableOfContents from '../components/TableOfContents.astro';
import MainNavigation from '../components/MainNavigation.astro';

export interface Props {
  frontmatter: { title: string; description: string };
  headings: MarkdownHeading[];
}

const { frontmatter, headings } = Astro.props;
---

<script>
  const tocMobile = document.getElementById('toc-mobile')!;

  tocMobile.querySelectorAll<HTMLAnchorElement>('a[href]').forEach(el => {
    el.addEventListener('click', () => {
      tocMobile.removeAttribute('open');
    });
  });
</script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title} | Create V3 App</title>
    <script is:inline>
      const LOCAL_STORAGE_KEY = 'color-mode';
      const html = document.documentElement;

      const colorMode = localStorage.getItem(LOCAL_STORAGE_KEY);
      if (colorMode) {
        html.classList.add(colorMode);
      }
    </script>
  </head>
  <body>
    <Sprite.Provider>
      <SkipToContent />
      <Container>
        <div class="layout">
          <Header>
            <details id="toc-mobile">
              <summary>On this page</summary>
              <TableOfContents headings={headings} class="toc-mobile-content" />
            </details>
          </Header>

          <aside>
            <MainNavigation />
          </aside>

          <main id="content">
            <slot />
          </main>

          <aside>
            <TableOfContents headings={headings} />
          </aside>

          <footer>
            Made with ðŸ’€ by
            <a
              href="https://github.com/loicpennequin"
              rel="noopener noreferrer"
              target="_blank"
            >
              Daria aka "CEO of Based"
            </a>
          </footer>
        </div>
      </Container>
    </Sprite.Provider>
  </body>
</html>
<style is:global>
  @import 'open-props/media';
  @import 'open-props/postcss/normalize';
  .layout {
    min-height: 100vh;
    display: grid;
    grid-template-rows: auto 1fr auto;
    grid-template-columns: 30ch 1fr 30ch;
    column-gap: var(--size-2);

    @media (--lg-n-below) {
      grid-template-columns: 30ch 1fr;
    }
    @media (--md-n-below) {
      grid-template-columns: 1fr;
    }
  }

  #toc-mobile {
    background: transparent;

    & > summary {
      width: fit-content;
    }
    @media (--lg-n-above) {
      display: none;
    }
  }

  .toc-mobile-content {
    box-shadow: var(--shadow-2);
    width: fit-content;
  }

  .layout > header,
  .layout > footer {
    grid-column: 1 / -1;
  }
  .layout > footer {
    padding: var(--size-4);
    text-align: center;
    margin-block-start: auto;
  }

  .layout > aside {
    align-self: start;
    position: sticky;
    top: 5rem;
    z-index: 2;

    &:nth-of-type(1) {
      @media (--md-n-below) {
        display: none;
        float: left;
      }
    }
    &:nth-of-type(2) {
      @media (--md-n-below) {
        display: none;
      }
    }
  }

  main {
    justify-self: center;
    with: 100%;
    width: 60ch;

    @media (--md-n-below) {
      padding-top: var(--size-5);
    }

    & h2 {
      margin-block-end: var(--size-4);
    }

    & :is(h2, h3, h4) {
      scroll-margin-block-start: 6.5rem;

      @media (--md-n-above) {
        scroll-margin-block-start: 5rem;
      }
    }

    & .astro-code {
      padding: var(--size-2) var(--size-6);
      border-radius: var(--radius-3);
    }

    & .remark-code-title {
      background-color: #191724;
      padding: var(--size-2) var(--size-5) 0;
      color: #e0def4;
      border-top-left-radius: var(--radius-3);
      border-top-right-radius: var(--radius-3);

      & + .astro-code {
        border-top-left-radius: 0;
        border-top-right-radius: 0;
        display: block;
        max-inline-size: 100%;
      }
    }
  }
</style>
