---
import '../styles/theme.css';
import '../styles/global.css';
import Header from '../components/Header.astro';
import SkipToContent from '../components/SkipToContent.astro';
import { Sprite } from 'astro-icon';

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      const LOCAL_STORAGE_KEY = 'dark-mode';
      const html = document.documentElement;

      const colorMode = localStorage.getItem(LOCAL_STORAGE_KEY);
      if (colorMode) {
        html.classList.add(colorMode);
      }
    </script>
  </head>
  <body>
    <Sprite.Provider>
      <SkipToContent />
      <Header />

      <main id="content">
        <slot />
      </main>

      <footer>
        Made with ðŸ’€ by
        <a
          href="https://github.com/loicpennequin"
          rel="noopener noreferrer"
          target="_blank"
        >
          Daria aka "CEO of Based"
        </a>
      </footer>
    </Sprite.Provider>
  </body>
</html>
<style is:global>
  body {
    min-height: 100vh;
    display: grid;
    grid-template-rows: auto 1fr auto;
  }

  body > header {
    padding-inline: var(--size-3);
  }

  body > footer {
    padding: var(--size-4);
    text-align: center;
  }
</style>
