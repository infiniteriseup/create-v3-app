---
import { Sprite } from 'astro-icon';
import Container from '../components/Container.astro';
import homeMeme from '../assets/img/home-meme.jpg';
---

<Container class="hero" as="section">
  <header>
    <p class="headline">
      We fixed full stack <span aria-hidden="true">ðŸ˜±</span>
    </p>
    <p>
      The best way to start a blazingly fast, fullstack Nuxt app as a software
      engineer in 2023 (NOT CLICKBAIT)
    </p>

    <footer>
      <a class="footer-link" href="/docs">Getting Started</a>
      <a
        class="footer-link"
        href="https://github.com/loicpennequin/create-v3-app"
        rel="noopener noreferrer"
        target="_blank"
      >
        Github
        <Sprite name="octicon:link-external-16" aria-hidden="true" />
      </a>
    </footer>
  </header>
  <div class="image-wrapper">
    <img
      src={homeMeme}
      alt="spitting facts about the state of web development"
      aria-hidden="true"
    />
  </div>
</Container>

<style>
  @import 'open-props/media';
  .hero {
    max-width: var(--size-lg);
    width: 100%;
    margin-inline: auto;
    display: grid;
    grid-template-columns: repeat(2, minmax(auto, 1fr));
    place-content: center;
    gap: var(--size-3);
    perspective: 600px;
    transform-style: preserve-3d;

    @media (--md-n-below) {
      display: flex;
      flex-direction: column;
    }
  }

  header {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: var(--size-3);
    font-size: var(--font-size-4);
  }
  .headline {
    color: transparent;
    background: var(--gradient-24);
    background-clip: text;
    font-size: var(--font-size-9);
    font-weight: var(--font-weight-8);
    margin: 0;
    line-height: var(--font-lineheight-0);

    & span {
      color: var(--text-1);
    }
  }

  @keyframes hero-image {
    from {
      transform: rotateY(-5deg);
    }
    to {
      transform: rotateY(2deg);
    }
  }
  .image-wrapper {
    filter: saturate(150%) contrast(200%);
    transform: rotateY(-5deg);
    box-shadow: var(--shadow-6);
    animation: hero-image alternate infinite;
    animation-duration: 3s;

    & > img {
      animation: var(--animation-fade-in-bloom) forwards;
      animation-duration: 3s;
    }
  }

  footer {
    display: flex;
    justify-content: center;
    gap: var(--size-6);
    margin-block-start: var(--size-6);

    & svg {
      width: 1.2rem;
      aspect-ratio: 1;
    }

    &:hover {
      background: var(--surface-2);
    }
  }

  .footer-link {
    color: inherit;
    display: flex;
    gap: var(--size-1);
    padding: var(--size-2) var(--size-3);
    border-radius: var(--radius-pill);
    text-decoration: none;
    font-size: var(--font-size-3);
    font-weight: var(--font-weight-6);

    &:nth-of-type(1) {
      background: var(--gradient-4);
    }

    &:nth-of-type(1):hover {
      filter: brightness(1.05);
    }
    &:nth-of-type(2) {
      border: solid 1px var(--gray-5);
      background: var(--surface-1);
    }
  }
</style>
